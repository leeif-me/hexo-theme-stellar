.post-list .paginator-wrap
  display: flex
  justify-content: space-between
  align-items: center
  disable-select()
  font-size: 1rem
  font-weight: 700
  background: var(--block)
  border-radius: $border-card
  border: 1px solid var(--block-border)
  overflow: hidden
  .paginator
    text-align: center
  .current
    font-family: $ff-code
    color: var(--text-p3)
  a.paginator
    color: var(--text-p3)
    padding: 1rem
    line-height: 0
    img
      height: 1rem
      filter: grayscale(100%)
    &.disable
      pointer-events: none
      opacity: 0.25
    &.prev
      border-right: 1px solid transparent
    &.next
      border-left: 1px solid transparent
  a.paginator:hover
    background: var(--card)
    border-color: var(--block-border)
    img
      filter: grayscale(0%)
