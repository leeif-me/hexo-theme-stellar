.l_left footer.footer
  margin: 0.5rem var(--gap-l) 1rem

.social-wrap
  display: grid
  grid-gap: 0.25rem 0.25rem
  grid-template-columns: repeat(auto-fill, 32px)
  a.social
    line-height: 0
    display: inline-block
    padding: 6px
    border-radius: 32px
    filter: grayscale(100%)
    overflow: hidden
    background: transparent
    trans3: box-shadow background transform
    &:hover
      z-index: 1
      filter: unset
      background: var(--alpha100)

.proj-wrap
  display: grid
  grid-gap: 0.25rem 0.25rem
  a.item
    border-radius: 4px
    font-size: $fs-13
    font-weight: 500
    color: var(--text-p2)
    background: var(--block)
    border: 1px solid var(--block-border)
    overflow: hidden
    padding: .75em
    text-align: center
    svg
      margin-right: .5em
    &:hover
      color: $color-hover
      background: var(--card)
