.md .tag-plugin.split
  margin: 0.5rem 0
.tag-plugin.split
  display: grid
  grid-gap: 16px
  grid-template-columns: repeat(auto-fill, "calc((100% - 1 * %s) / 2)" % 16px)
  >div>
    p   
      line-height: 1.5
    :first-child
      margin-top: 0
    :last-child
      margin-bottom: 0
    p:first-child
      margin-top: -0.25em
    p:last-child
      margin-bottom: -0.25em
    

.tag-plugin.split
  &[bg]>div
    padding: 1rem
    border-radius: $border-card
  &[bg='block']>div
    background: var(--block)
  &[bg='card']>div
    background: var(--card)
    box-shadow: $boxshadow-card