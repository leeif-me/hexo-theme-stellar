if hexo-config('plugins.lazyload.blurIn') == true
  img.lazyload:not(.placeholder)
    trans2pro: transform 0.75s filter 0.25s
    &:not(.loaded)
      filter blur(8px)
    &.loaded
      filter none
else
  img.lazyload:not(.placeholder)
    trans2pro: transform 0.75s opacity 0.5s
    &:not(.loaded)
      opacity: 0
    &.loaded
      opacity: 1
